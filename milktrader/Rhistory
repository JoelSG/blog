require(milk)
require(PerformanceAnalytics)
getSymbols('TLT', from='1900-01-01')
TLT$RET = dailyReturn(Cl(TLT))
TLT$back10 = rollapply(TLT$RET, 10, Return.cumulative)
TLT$in10 = lag(TLT$RET, k=-10)
T = TLT[TLT$back10 < - .06]
png('TLTin10.png')
zeroplot(T$in10, up.col='dodgerblue', dn.col='dodgerblue4', main='TLT', xlab='2002 to present')
