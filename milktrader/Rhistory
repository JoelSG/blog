require(milk)
data(opex)
getSymbols('^GSPC', from=index(first(opex)))
GSPC$RET = dailyReturn(Cl(GSPC))
GSPC$yest = lag(GSPC$RET, k=1)
G = GSPC[index(opex)]
g = G[.indexmon(G) == 5 | .indexmon(G) == 6 | .indexmon(G) ==7 ]
png('thu.opex.week.summer.png')
around_zero(g$yest, main="SPX returns on Thursdays during OpEx week\n over summer months",  xlab='Jan 2000 to Aug 2010')
dev.off()
