require(milk)
getSymbols('^NDX', from='1900-01-01')
a = nrow(NDX) -1
NDX = NDX[-a,]
NDX$RET = dailyReturn(Cl(NDX))
NDX$next.day = lag(NDX$RET, k=-1)
ndx = NDX[NDX$RET > .024 & .indexwday(NDX) == 5]
png('ndxbigfriday.png')
zeroplot(ndx$next.day, up.col='yellow', dn.col='yellow4', main='NDX', xlab='1985 to present')
