require(milk)
getSymbols('^NDX', from='1900-01-01')
NDX$RET = dailyReturn(Cl(NDX))
NDX$next.day = lag(NDX$RET, k=-1)
N = NDX[NDX$RET > .008 & .indexwday(NDX) == 2 & .indexmon(NDX) == 7]
system('cal aug 2011
png('ndxtueaug.png')
zeroplot( N$next.day , main='NDX', up.col = 'yellow', dn.col= 'yellow4', xlab='1986 to present')
